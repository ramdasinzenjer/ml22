<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <EditText
        android:textAlignment="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Complaint Title"
        android:ems="10"
        android:background="#f9f7f7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:id="@+id/etc" />

    <ScrollView
        android:id="@+id/idscroll"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etc"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:background="#f9f7f7">
    <EditText
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:hint="@string/complaint_description"
        android:id="@+id/etcomp"
        />
    </ScrollView>

    <TextView
        android:id="@+id/messageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idscroll"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <Button
        android:id="@+id/btupload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/uploadfilee"
        android:layout_below="@+id/messageText"
        android:layout_marginTop="21dp"
        android:text="select proof" />

    <Button
        android:id="@+id/bts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uploadfilee"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Submit" />

    <Button
        android:id="@+id/uploadfilee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btupload"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="@string/upload_file"
        android:visibility="invisible" />

        <ImageView
            android:id="@+id/testimgview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/uploadfilee"
            android:layout_marginStart="19dp"
            android:layout_marginTop="35dp"
            android:src="@mipmap/ic_launcher" />

    <ImageButton
        android:id="@+id/bt_cam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btupload"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/btupload"
        app:srcCompat="@android:drawable/ic_menu_camera" />
    </RelativeLayout>
</ScrollView>

</RelativeLayout>
