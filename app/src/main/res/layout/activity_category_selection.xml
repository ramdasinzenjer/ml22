<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lida.myapplication.activity.category_selection">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_centerInParent="true"
            android:id="@+id/GridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="2"
            android:orientation="horizontal"
            tools:context=".GridXMLActivity"
            android:layout_marginLeft="28dp">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view1"
                android:layout_width="180dp"
                android:layout_height="235dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="8dp"
                android:layout_marginBottom="16dp">

                <RelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/mla"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="action_settings"
                        android:src="@drawable/niyamasabha"
                        android:scaleType="centerCrop"
                        android:onClick="mlas"/>

                    <TextView
                        android:layout_alignParentBottom="true"
                        android:id="@+id/niya"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="33sp"
                        android:text="MLA's"
                        android:textStyle="bold"
                        android:textColor="#fdfdfd"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view2"
                android:layout_width="180dp"
                android:layout_height="235dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="8dp"
                android:layout_marginBottom="16dp">

                <RelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/mp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="action_settings"
                        android:src="@drawable/paru"
                        android:scaleType="centerCrop"
                        android:onClick="mps"/>

                    <TextView
                        android:layout_alignParentBottom="true"
                        android:id="@+id/par"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="33sp"
                        android:text="MP's"
                        android:textStyle="bold"
                        android:textColor="#1827ae"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view3"
        android:layout_width="180dp"
        android:layout_height="235dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="8dp"
        android:layout_marginBottom="16dp">

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/minister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="action_settings"
                android:src="@drawable/gov"
                android:scaleType="centerCrop"
                android:onClick="ministers"/>

            <TextView
                android:layout_alignParentBottom="true"
                android:id="@+id/govern"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:text="MINISTER's"
                android:textStyle="bold"
                android:textColor="#ec185b"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view4"
        android:layout_width="180dp"
        android:layout_height="235dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="8dp"
        android:layout_marginBottom="16dp">

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cmos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="action_settings"
                android:src="@drawable/chief"
                android:scaleType="centerCrop"
                android:onClick="cmo"/>

            <TextView
                android:layout_alignParentBottom="true"
                android:id="@+id/ch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="33sp"
                android:text="CMO"
                android:textStyle="bold"
                android:textColor="#f5fafa"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

        </GridLayout>

    </RelativeLayout>




</RelativeLayout>
